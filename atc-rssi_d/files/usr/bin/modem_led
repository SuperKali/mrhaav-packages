#!/bin/sh
#
# leds for ASUS 4G-AX56

led_status=$1
[ $led_status = 'rssi' ] && rssi=$2

# LED names
red=/sys/class/leds/red:mobile/trigger
yellow=/sys/class/leds/yellow:mobile/trigger
blue=/sys/class/leds/blue:mobile/trigger
white=/sys/class/leds/white:mobile/trigger

rssi-1=/sys/class/leds/white:rssi-1/trigger
rssi-2=/sys/class/leds/white:rssi-2/trigger
rssi-3=/sys/class/leds/white:rssi-3/trigger


case "$led_status" in

    boot )
        echo default-on > $red
        echo none > $yellow
        echo none > $blue
        echo none > $white
        ;;

    config )
        echo none > $red
        echo default-on > $yellow
        echo none > $blue
        echo none > $white
        ;;

    searching )
        echo none > $red
        echo timer > $yellow
        echo none > $blue
        echo none > $white
        ;;

    connected_WCDMA )
        echo none > $red
        echo none > $yellow
        echo default-on > $blue
        echo none > $white
        ;;

    connected_LTE )
        echo none > $red
        echo none > $yellow
        echo none > $blue
        echo default-on > $white
        ;;

    rssi )
        if [ $rssi -le 20 ]
        then
            echo none > $rssi-1
            echo none > $rssi-2
            echo none > $rssi-3
        elif [ $rssi -le 44 ]
        then
            echo default-on > $rssi-1
            echo none > $rssi-2
            echo none > $rssi-3
        elif [ $rssi -le 68 ]
        then
            echo default-on > $rssi-1
            echo default-on > $rssi-2
            echo none > $rssi-3
        else
            echo default-on > $rssi-1
            echo default-on > $rssi-2
            echo default-on > $rssi-3
        fi
        ;;

    off )
        echo none > $red
        echo none > $yellow
        echo none > $blue
        echo none > $white
        echo none > $rssi-1
        echo none > $rssi-2
        echo none > $rssi-3
        ;;

esac
